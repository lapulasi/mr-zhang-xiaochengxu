/* pages/page_ggw/page_ggw_add.wxss */
.section{
  display: flex;
  flex:1;
  flex-direction:column;
  background:#fff;
}
.form-row{
  display: flex;
  flex-direction:row;
}
.form-row-item{
  display: flex;
  flex-wrap:wrap;
  justify-content:flex-start;
  align-items:center;
  padding: 20rpx;
  flex:2;
}
.form-row-label-view{
  display: flex;
  justify-content:center;
  align-items:center;
  padding: 20rpx;
  flex-direction: column;
  flex:1;
}

.form-row-item-image-area{
  display: flex;
  justify-content:flex-start;
  align-items:center;
  padding: 20rpx;
}
.form-row-picker{
  display:flex;
  flex:1;
  background:#fff;
  border:1px solid #ddd;
}

.picker-text{
  background:#fefefe;
  display:flex;
  justify-content:center;
  align-items:center;
  width:430rpx;
  height:75rpx;
}
.form-row-input{
  display:flex;
  flex:1;
  background:#fff;
  border:1px solid #ddd;
  padding:16rpx;
}
.form-row-textarea{
  width: 408rpx;
  min-height: 2.0rem;
  border:1px solid #ddd;
  padding:16rpx;
}
.form-row-item-image{
  border:1px solid #eee;
  /* flex-grow:1; */
  width:62px;
  height:160rpx;
}
.form-row-item-image:nth-child(n+4){
  margin-top: 10px;
}
.flex1{
  flex:1;
}
.flex2{
  flex:2;
}
.section_title{
  display: flex;
  justify-content:center;
  align-content:center;
  font-size: 14px;
  padding:10px;
  background:#ddd;
}

.form_style{
  display: flex;
  flex-direction:column;
}

.delBtnRed{background-color:#DD4F43;margin-top:10px;}

.hide{
  display:none;
}
.show{
  display: block;
}
.flex{
  display: flex;
}
.carmeraStyle{
  display: flex;
  font-size: 20px;
  padding:10px;
  background:#ddd;
}

.canvas {
  width: 304px;
  height: auto;
  background-color:#ddd;
  margin:0 auto;
  padding-bottom: 50px;
}

.cover-view {
  margin-top: 20px;
  width: 304px;
  height: 30px;
  text-align: center;
  line-height: 30px;
  word-break:break-all;
  font-size: 12px;
}
.page-body{
  position: fixed;
  width: 304px;
  height: auto;
  left: 50%;
  top: 30%;
  margin-left: -152px;
  background-color:#ddd;
  z-index: 10
}
.cameraBtn{
  margin-left: 0;
}

